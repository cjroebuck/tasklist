<% title "Task" %>

<p>
  <strong>Name:</strong>
  <%=h @task.name %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @task.description %>
</p>
<p>
  <strong>Finish By:</strong>
  <%=h @task.finish_by %>
</p>
<p>
  <strong>Category:</strong>
  <%= @task.categories.collect {|c| link_to c.name, c}.join(', ') %>
</p>
<p>
  <strong>Priority:</strong>
  <%= link_to @task.priority.name, @task.priority %>
</p>

<p>
  <%= link_to "Edit", edit_task_path(@task) %> |
  <%= link_to "Destroy", @task, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", tasks_path %>
</p>
